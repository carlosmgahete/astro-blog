<button 
  class="hamburger md:hidden p-2 rounded-lg bg-gray-100 hover:bg-gray-200 dark:bg-gray-800 dark:hover:bg-gray-700 transition-colors duration-200" 
  aria-label="Toggle menu"
>
  <div class="w-5 h-5 flex flex-col justify-center items-center space-y-1">
    <span class="line block w-4 h-0.5 bg-gray-700 dark:bg-gray-300 transition-all duration-300 ease-in-out"></span>
    <span class="line block w-4 h-0.5 bg-gray-700 dark:bg-gray-300 transition-all duration-300 ease-in-out"></span>
    <span class="line block w-4 h-0.5 bg-gray-700 dark:bg-gray-300 transition-all duration-300 ease-in-out"></span>
  </div>
</button>

<style>
  .hamburger.expanded .line:first-child {
    transform: rotate(45deg) translate(3px, 3px);
  }
  
  .hamburger.expanded .line:nth-child(2) {
    opacity: 0;
  }
  
  .hamburger.expanded .line:last-child {
    transform: rotate(-45deg) translate(3px, -3px);
  }
</style>